<div class="connection">
    <br>
    
<form action="{{ path("fos_user_security_check") }}" method="post">
    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
        <div id='global'>
    <div class="input-prepend">
    {#      <label for="username">{{ 'security.login.username'|trans({}, 'FOSUserBundle') }}</label>
#}
          
    <span class="add-on"><i class="icon-user"></i></span>
    <input type="text" class="span3" id="username" name="_username" placeholder="Username" value="{{ last_username }}" required="required" />
    
   {# <input class="span3" type="text" placeholder="Username">#}
    </div>
                 </div>
            <br>
              <div id='global'>
   {#
                 <label for="password">{{ 'security.login.password'|trans({}, 'FOSUserBundle') }}</label>
#}
    <div class="input-prepend">
    <span class="add-on"><i class="icon-key"></i></span>
     <input type="password" class="span3" id="password" name="_password" placeholder="Password" required="required" />
    {#<input class="span3" type="password" placeholder="Password">#}
    </div>
                     <div id='global'>
    <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
    <br>
    <label for="remember_me">{{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }}</label>
<br>
    <input type="submit" class="btn btn-large btn-primary" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}" />
</div>
    </form>
</div>
