{% extends "ApplicationSonataMediaBundle::layout.html.twig" %}

  {% block stylesheets %}
{{ parent() }}
<link rel="stylesheet" href="{{ asset('bundles/applicationcertificats/css/sliding.css') }}" type="text/css" media="all"/>

 {% endblock %}

{% block content_header '' %}

{% block title %}
    Liste des Medias
{% endblock %}
    
    
{% block content %}

{% for type, flashMessages in app.session.flashbag.all() %}
    {% for flashMessage in flashMessages %}
<div class="alert alert-{{ type }}">
            {{ flashMessage|trans }}
    </div>
    {% endfor %}
{% endfor %}

    <br><br>
  <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr class="title">
                 <th>Name</th>
                <th>Description</th>
                <th>Enabled</th>
               {# <th>Providername</th>#}
                <th>Providerstatus</th>
                {#<th>Providerreference</th>
                <th>Providermetadata</th>#}
                <th>Width</th>
                <th>Height</th>
                <th>Length</th>
                <th>Contenttype</th>
                <th>Size</th>
               {# <th>Copyright</th>#}
                <th>Authorname</th>
                <th>Context</th>
          {#      <th>Cdnisflushable</th>
                <th>Cdnflushat</th>
                <th>Cdnstatus</th>#}
                <th>Updatedat</th>
                <th>Createdat</th>
                <th>Id</th>
                <th colspan="2">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('usermedia_show', { 'id': entity.id }) }}">
{#{{ entity.name }}#}
<img src="{% path entity.id, 'small' %}" width="50" />
                            </a></td>
                <td>{{ entity.description }}</td>
                <td>{{ entity.enabled }}</td>
             {#  <td>{{ entity.providerName }}</td>#}
                <td>{{ entity.providerStatus }}</td>
               {# <td>{{ entity.providerReference }}</td>
                <td>{{ entity.providerMetadata }}</td>#}
                <td>{{ entity.width }}</td>
                <td>{{ entity.height }}</td>
                <td>{{ entity.length }}</td>
                <td>{{ entity.contentType }}</td>
                <td>{{ entity.size }}</td>
               {# <td>{{ entity.copyright }}</td>#}
                <td>{{ entity.authorName }}</td>
                <td>{{ entity.context }}</td>
             {#   <td>{{ entity.cdnIsFlushable }}</td>
                <td>{% if entity.cdnFlushAt %}{{ entity.cdnFlushAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.cdnStatus }}</td>#}
                <td>{% if entity.updatedAt %}{{ entity.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.createdAt %}{{ entity.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.id }}</td>
               
                    
                          <td>
                               <a href="{{ path('usermedia_show', { 'id': entity.id }) }}">
             
             {#       <a href="{{ path('epost_show', { 'id': entity.id }) }}">#}
                        <img src="{{ asset('bundles/applicationsonatamedia/images/detail.png') }}" alt="show" width="15" height="15" />
                    </a>
                </td>
               
                <td>
                    <a href="{{ path('usermedia_edit', { 'id': entity.id }) }}">
                        <img src="{{ asset('bundles/applicationsonatamedia/images/edit.png') }}" alt="edit" width="15" height="15" />
                    </a>
                </td>
      
            </tr>
        {% endfor %}
        </tbody>
    </table>
