{% block content_header '' %}


{% block title %}

{% endblock %}

 
{% block content %}
    <h1>CalendarGroup edit</h1>

<form  id="form" class="single"  action="{{ path('calendargroup_update',{ 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>

    <div class="row-fluid ">
        <div class="span6 offset1"> 
      {{ form_row(edit_form.nomGroup) }}
   {{ form_row(edit_form.email) }}
       {{ form_row(edit_form.description) }}
        </div>
        <div class="span5"> 
         
   {{ form_row(edit_form.users) }}
    {{ form(edit_form.proprietaire) }}
       {{ form_rest(edit_form) }}
        </div>
    </div>
    <div class="row-fluid">
        <div class="span6 offset1"> 
            <button type="submit" class="btn btn-large btn-warning">Valider</button>    
        </div>
        <div class="span4"> 
            <a href="{{ path('calendargroup') }}" class="btn btn-medium btn-success">Retour</a>
        </div>
    </div>

</form>
    

{% endblock %}
