<!DOCTYPE html>
<html>
    <head>
        <title>{% block headtitle %}I-CHANGE MROOT{% endblock %}</title>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
          {% block stylesheets %}
           <link rel="stylesheet" href="{{ asset('bootstrap/css/bootstrap-responsive.css') }}" type="text/css" />
        <link rel="stylesheet" href="{{ asset('bootstrap/css/bootstrap.css') }}" type="text/css" />
     
        <link rel="stylesheet" href="{{ asset('css/jquery-ui-1.9.2.custom.css') }}" type="text/css" media="all"/>
             {% stylesheets 
                '@ApplicationCertificatsBundle/Resources/public/css/certificatscenter.css' 
                output='css/compiled/main.css' filter='yui_css' %}
<link rel="stylesheet" type="text/css" media="screen" href="{{ asset_url }}" />
{% endstylesheets %}


  <style type="text/css">
   
.main-col { width: 70%; display: inline-block; float: left; border-right: 1px solid #ccc; padding: 20px; margin-bottom: 20px; }
.sidebar {  padding: 10px; display: inline-block; }
  th {
  background-color:blue;
  }
  .ui-widget-content a {
    color: blue;
      font-size:11px;
}
 .ui-widget-content a:hover {
    color: red;
    
}
 td.viewlabel, .calview td.viewlabel {
    font-size: 12px;
    
     background-color: rgb(87, 87, 87);
}
  td  {
     
      font-size:12px;
  }
  </style>

        {% endblock %}
    </head>
    <body>
      
    {% block content %}
        
         <center><h1>DETAILS OPERATION: <br> {{ entity.nom }} </h1></center>

<div id="tabs">
    

  
  <ul>
    <li><a href="#tabs-1"> <i class="icon-pencil"></i>  Donn√©es Principales</a></li>
    <li><a href="#tabs-2"><i class="icon-book"></i>  Fichiers</a></li>
  </ul>
      
  <div id="tabs-1">
   
<table class="table table-bordered table-hover">

 <thead>
                        <tr class="title">
                            <th>klmk</th>
                            <th>klm</th>
                        </tr>
                    </thead>
    <tbody>
        
       
        <tr>
            <td class="viewlabel">Id</td>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <td class="viewlabel">Nom</td>
            <td>{{ entity.nom }}</td>
        </tr>
        <tr>
            <td class="title">Demandeur</td>
            <td>{{ entity.demandeur }}</td>
        </tr>
        <tr>
            <td class="title">Datedebut</td>

            <td>{{ entity.dateDebut|date('Y-m-d H:i:s') }}</td>
        </tr>
        <tr>
            <td class="title">Datefin</td>
            <td class="single">{{ entity.dateFin|date('Y-m-d H:i:s') }}</td>
        </tr>
        <tr>
            <td class="title">Datecomep</td>
            <td>
            {% if entity.dateComep is not null %}
               {{ entity.dateComep|date('Y-m-d H:i:s') }}
                    {% else %}
                    Aucune
            {% endif %}
            </td>
            </tr>
            <tr>
                 <td class="title">Datevsr</td>
            <td>
            {% if entity.dateVsr is not null %}
               {{ entity.dateVsr|date('Y-m-d H:i:s') }}
                      {% else %}
                    Aucune
            {% endif %}
            </td>
               
             
            </tr>
            <tr>
                <td class="title">Description</td>
                
                <td>{{ entity.description|raw }}</td>
            </tr>

            <tr>
                <td class="title">Projet</td>
                <td>{{ entity.idProjet }}</td>
            </tr>
            <tr>
                <td class="title">Status</td>
                <td>{{ entity.idStatus }}</td>
            </tr>
            <tr>
                <!--<td class="title">Avatar</td>
                <td>{#{ entity.avatar }#}</td>-->
            </tr>

            <!--  <tr>
                  <td class="title">Fichier Principal</td>
                  <td>{#{ entity.picture.name }#}
                  
              
                  </td>
              </tr>-->

            <tr><td class="title">Applications</td>
                <td>
           {{ entity.idapplis|join(', ') }}   
             {#% for appli in entity.idapplis %} {{ appli.nomapplis }}
       {% endfor %#}
                    </td>
                </tr>

                <tr><td class="title">Environnements</td>
                    <td>

           {{ entity.idEnvironnement|join(', ') }}   
             {#% for envi in entity.idEnvironnement %} {{ envi.nom }}
       {% endfor %#}
                    </td>
                </tr>



                <tr>
                    <td class="title">Utilisateurs</td>
                    <td>
           {{ entity.idusers|join(', ') }}   
{#% for user in entity.idusers %} {{ user.nomUser }}

       {% endfor %#}
                        </td>
                    </tr>
                    
                     <tr>
                <td class="title">Ticket Externe</td>
                <td>{{ entity.ticketExt }}</td>
            </tr>
             <tr>
                <td class="title">Ticket Interne</td>
                <td>{{ entity.ticketInt }}</td>
            </tr>


                </tbody>
            </table>

</div>
    
  <div id="tabs-2">


            <h3><center>Fichiers de la demande</center></h3>
            <table class="table table-bordered table-hover table-striped">
                     <tr class="title"><th class="title">id</th><th class="title">Nom</th><th class="title">Date Maj</th><th class="title">Lien</th></tr>
                </thead>
               {% for fic in entity.picture %}
                <tr> 
                    <td>{{ fic.id }}</td>
                    <td>{{ fic.name }}</td>
                    <td>{{ fic.updatedAt|date('Y-m-d H') ~ 'h' }}</td>
                    <td><a href="{{ path('download_route', { 'filename': fic.path }) }}">{{ fic.path }}</a></td>

                       <!-- <a href="{#{ asset('bundles/my/Resources/public/pdf/dok.pdf') }#}">Download PDF!</a>-->

                </tr>
       {% endfor %}
            </tbody>
        </table>

   
  </div>
 
 
      </div>        
         
      
                {% endblock %}
     
        
                <!-- Le javascript ================================================== -->
                <!-- Placed at the end of the document so the pages load faster -->

       {% block javascripts %}
                  <script src="{{ asset('jquery/jquery-1.9.1.js') }}" type="text/javascript"></script>
                <script type="text/javascript" src="{{ asset('jquery/jquery-ui-1.9.2.custom.min.js') }}"></script>
   <script>
  
$(document).ready(function() {

    $( "#tabs" ).tabs();

  
});
</script>
    
    
 {% endblock %}
    
           
        </body>

    </html>
    
    
    