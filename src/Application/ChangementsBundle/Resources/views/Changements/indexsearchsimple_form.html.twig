        {{ form_row(search_form.idKind) }}
         {{ form_row(search_form.iscti) }}
    {{ form_rest(search_form) }}</td>
    </tr>
    <tr><td class="calendar" colspan="3">
       <button id="filter" type="submit" name="submit-filter" class="btn btn-medium btn-warning filter" value="filter" >
          <i class="icon-search icon-mesfiltres"></i>  Filtrer</button>
    </tr>
    </tbody>
