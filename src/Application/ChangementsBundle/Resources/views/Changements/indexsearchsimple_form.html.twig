<form  id="thesearchform" class="form" action="{{ path(tpl_path) }}" method="POST" {{ form_enctype(search_form) }}>
   <table class="table-mybordered">

    <tr><td class="calendar">
    {{ form_row(search_form.nom) }}
      <br/>
    {{ form_row(search_form.description) }}
  
     {{ form_row(search_form.idusers) }}
        {#<input id="changements_searchfilter_idusers_cl" class="btn-info" type="button" value="Clear"></input>#}
