<form  class="form" action="{{ path(tpl_path) }}" method="POST" {{ form_enctype(search_form) }}>
   <table class="table-mybordered">

    <tr><td class="calendar">
    {{ form_row(search_form.nom) }}
      <br/>
    {{ form_row(search_form.description) }}
  
     {{ form_row(search_form.idusers) }}
   
    {{ form_row(search_form.demandeur) }}
   
    </td>
    <td class="calendar central"> 
        Date Début Opération
        <div class="first">{{ form_row(search_form.dateDebut) }}</div>
        <div class="second">{{ form_row(search_form.dateDebut_max) }}</div>
    <br><br>
       Date Fin Opération
        <div class="first">{{ form_row(search_form.dateFin) }}</div>
       <div class="second">{{ form_row(search_form.dateFin_max) }} </div>
         <br><br>
         Ticket Externe  -   Ticket Interne
       <div class="first">{{ form_widget(search_form.ticketExt) }}</div>
       <div class="second">{{ form_widget(search_form.ticketInt ) }} </div>
      
 
     </td>
    <td class="calendar">
         {{ form_row(search_form.idEnvironnement) }}
         {{ form_row(search_form.idProjet) }}
              {{ form_row(search_form.idStatus) }}
             
   
    {{ form_rest(search_form) }}</td>
    </tr>
    <tr><td class="calendar" colspan="3">
       <button id="filter" type="submit" name="submit-filter" class="btn btn-medium btn-warning" value="filter" >
          <i class="icon-search icon-mesfiltres"></i>  Filtrer</button>
    </tr>
    </tbody>
    </table>
 </form>