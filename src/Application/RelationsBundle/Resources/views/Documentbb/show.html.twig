{% extends "ApplicationRelationsBundle::layout.html.twig" %}

  {% block stylesheets %}
{{ parent() }}
      <link rel="stylesheet" href="{{ asset('bundles/applicationrelations/css/sliding.css') }}" type="text/css" media="all"/>
       <link rel="stylesheet" href="{{ asset('bundles/applicationrelations/css/tableview.css') }}" type="text/css" media="all"/>
 {% endblock %}

{% block content_header '' %}
{% block title %}DETAILS DOCUMENT:  {{ entity.name }} {% endblock %}
{% block content %}
      
     <br><br>
     
<table class="view table-bordered">

 <thead>
                        <tr class="title">
                            <th>Param√®tres</th>
                            <th>Valeurs</th>
                        </tr>
                    </thead>
    <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Path</th>
                <td>{{ entity.path }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('projets_documents') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('projets_documents_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('projets_documents_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}
