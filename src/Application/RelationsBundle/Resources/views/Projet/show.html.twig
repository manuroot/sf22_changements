<h3><center>Liste des Applications associées</center></h3>
<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr class="title"><th>Nom</th><th>Description</th></tr>
  </thead>
        {% for appli in applis %}
        <tr>
            <td>{{ appli.nomapplis }}</td>
            <td>{{ appli.description }}</td>
        </tr>

       {% endfor %}
        </tbody>
</table>


<h3><center>Liste des Changements</center></h3>
<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr class="title"><th>Nom</th><th>Date Début</th></tr>
  </thead>
        {% for changement in changements %}
        <tr> <td>{{ changement.nom }}</td>
            <td>{{ changement.dateDebut|date('Y-m-d H') ~ 'h' }} </td>
        </tr>

       {% endfor %}
        </tbody>
</table>


<h3><center>Liste des Fichiers associés</center></h3>
                    <table class="table table-striped  table-bordered table-hover">
                        <thead>
                            <tr class="title"><th>id</th><th>Nom</th><th>Path</th></tr>
                        </thead>
               {% for fic in entity.picture %}
                        <tr> 
                            <td>{{ fic.id }}</td>
                            <td>{{ fic.name }}</td>
                         <td>  
                            {%  if (fic.path is not null) %}
                            <a href="{{ path('download_simple_route', { 'filename': fic.path }) }}">{{ fic.path }}</a>
                            {% else %} pas de path: contacter Administrateur
                            {% endif %}
                         </td>

                        </tr>
       {% endfor %}
                        </tbody>
                    </table>
 
        <h3><center>Liste des Certificats de ce projet</center></h3>
<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr class="title">
            <th>Nom</th>
            <th>Type</th>
              <th>CN-NameType</th>
            <th>Date Début</th>
            <th>Date Fin</th>
        </tr>
  </thead>
        {% for certificat in certificats %}
        <tr>
            <td>{{ certificat.fileName }}</td>
           <td>{{ certificat.typeCert.FileType }}</td>
            
        
            <td>{{ certificat.cnName }}</td>
           {% if certificat.startDate %}
                 <td>   {{ certificat.startDate|date('Y-m-d') }}{% endif %}</td>
                    
                    
            {% if certificat.endTime %}

              
           <td>    {{ certificat.endTime|date('Y-m-d') }}</td>
           
{% endif %}
        </tr>

       {% endfor %}
        </tbody>
</table>



