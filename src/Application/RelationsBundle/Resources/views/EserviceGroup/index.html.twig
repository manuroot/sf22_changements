                <td>{{ entity.description|raw }}</td>
                  <td>{{ entity.iduser.username }}</td>
                       <td>{{ entity.idgroup.nomGroup }}</td>
                     
 
               <td>
                {% if entity.isaccepted ==0 %}
                        En Attente
