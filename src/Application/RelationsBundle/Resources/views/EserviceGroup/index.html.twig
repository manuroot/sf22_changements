                </td>
                <td>
                   
                    <a href="{{ path('groupedemande_edit', { 'id': entity.id }) }}">
                       
                        <img src="{{ asset('bundles/applicationrelations/images/edit.png') }}" alt="edit" width="15" height="15" />
                    </a>
                </td>
                <td>
                      {% if entity.isaccepted ==0 %}
             
                    <a href="{{ path('groupedemande_accept', { 'id': entity.id }) }}">
